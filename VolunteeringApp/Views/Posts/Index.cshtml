@model IEnumerable<VolunteeringApp.Models.Social.Post>

@{
    ViewData["Title"] = "Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-8 mx-auto">
    <h1 class="display-4">Posts</h1>
    <hr/>
    @foreach (var item in Model)
    {
        <div class="card my-4" style="border-color:var(--secondary-color)">
            <div class="card-header" style="background-color:var(--bg-color)">
                <h3 class="card-title mb-0">@Html.DisplayFor(modelItem => item.Title)</h3>
                <a class="link-secondary link-offset-2 link-underline link-underline-opacity-0"
                   style="text-decoration:none"
                   asp-controller="Organization"
                   asp-action="Details"
                   asp-route-id="@item.Author.Id">
                    @Html.DisplayFor(modelItem => item.Author.OfficialName) (&#64;@Html.DisplayFor(modelItem => item.Author.UserName))
                </a>
            </div>
            <div class="card-body">
                <p class="card-text">@Html.DisplayFor(modelItem => item.Body)</p>
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-controller="Posts" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary" style="background-color:var(--primary-color);color:white">
                        <i class="bi bi-arrow-right-circle-fill"></i> Go to post
                    </a>
                    <p class="font-monospace mb-0">Posted at @Html.DisplayFor(modelItem => item.CreatedAt)</p>
                </div>
            </div>
        </div>
    }
</div>
