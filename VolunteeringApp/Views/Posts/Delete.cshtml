@model VolunteeringApp.Models.Social.Post

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Are you sure you want to delete this post?</h1>
<div>
    <div class="card my-4">
        <div class="card-header">
            <div class="row">
                <div class="col-9">
                    <!-- Take 9 columns for the title -->
                    <h5 class="card-title display-6">@Html.DisplayFor(model => model.Title)</h5>
                </div>
                <div class="col-3 text-end">
                    <!-- Take 3 columns for the CreatedAt -->
                    <p>Posted at @Html.DisplayFor(model => model.CreatedAt)</p>
                </div>
            </div>
            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(model => model.Author.OfficialName) (&#64;@Html.DisplayFor(model => model.Author.UserName))</h6>
        </div>
        <div class="card-body">
            <p class="card-text">@Html.DisplayFor(model => model.Body)</p>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
    </form>
</div>
