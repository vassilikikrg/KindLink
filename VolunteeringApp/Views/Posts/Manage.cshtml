@model IEnumerable<VolunteeringApp.Models.Social.Post>

@{
    ViewData["Title"] = "Manage Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Manage Posts</h1>

<p>
    <a asp-action="Create" style="color:var(--primary-color)"><i class="bi bi-file-plus"></i>Create New</a>
</p>
@foreach (var item in Model)
{
    <div class="card my-4" style="border-color:var(--secondary-color)">
        <div class="card-header" style="background-color:var(--bg-color)">
            <div class="row">
                <div class="col-9">
                    <!-- Take 9 columns for the title -->
                    <h5 class="card-title display-6">@Html.DisplayFor(modelItem => item.Title)</h5>
                </div>
                <div class="col-3 text-end">
                    <!-- Take 3 columns for the CreatedAt -->
                    <p>Posted at @Html.DisplayFor(modelItem => item.CreatedAt)</p>
                </div>
            </div>
            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Author.OfficialName) (&#64;@Html.DisplayFor(modelItem => item.Author.UserName))</h6>
        </div>
        <div class="card-body">
            <p class="card-text">@Html.DisplayFor(modelItem => item.Body)</p>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary-custom">Go to post</a>
        </div>
        <div class="card-footer bg-transparent">
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary-custom"><i class="bi bi-pencil"></i> Edit</a> |
@*             <a asp-action="Details" asp-route-id="@item.Id">Details</a> | *@
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger-custom"><i class="bi bi-trash3"></i> Delete</a>
        </div>
    </div>

}
