@model VolunteeringApp.Models.Social.Event

<div class="card mb-3" style="max-width: 1000px;">
    <div class="row g-0">
        <div class="col-md-4">
            <div class="card-img-top" style="height: 340px; overflow: hidden; background-image: url('data:image/jpeg;base64,@Convert.ToBase64String(@Model.Image)'); background-size: cover; background-position: center;"></div>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <div class="text-danger"><small>From @Model.StartTime.ToString("ddd, dd MMM yyyy 'at' hh:mm tt") to @Model.EndTime.ToString("ddd, dd MMM yyyy 'at' hh:mm tt")</small></div>
                <h5 class="card-title">@Model.Title</h5>
                <hr />
                <div class="mt-2 fw-bolder ">Description</div>
                <div class="text-truncate">@Model.Description</div>
                <div class="mt-2 fw-bolder">@Html.DisplayNameFor(model => model.MaxParticipants)</div>
                <div>@Model.MaxParticipants</div>
                <div class="mt-2 fw-bolder">Location</div>
                <div>@Model.Location</div>
                <div class="mt-3 row justify-content-end">
                    @if (ViewBag.isTheProfileOwner == true)
                    {
                        <div class="col-auto">
                            <a asp-controller="Events" asp-action="Details" asp-route-id="@Model?.Id" class="btn btn-dark">View More</a>
                        </div>
                        <div class="col-auto">
                            <a asp-controller="Events" asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-dark">Edit</a>
                        </div>

                        <div class="col-auto">
                            <a asp-controller="Events" asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-outline-danger">Delete</a>

                        </div>
                    }
                    else
                    {
                        <div class="col-auto">
                            <a asp-controller="Events" asp-action="Details" asp-route-id="@Model?.Id" class="btn btn-dark">View More</a>
                        </div>
                        @if (ViewBag.HasJoined == true)
                        {
                            <div class="col-auto">
                                <form asp-controller="EventParticipants" asp-action="Leave" asp-route-id="@Model.Id" method="post">
                                    <button type="submit" class="btn btn-secondary">Leave Event</button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <div class="col-auto">
                                <form asp-controller="EventParticipants" asp-action="Join" asp-route-id="@Model.Id" method="post">
                                    <button type="submit" class="btn btn-secondary">Join Event</button>
                                </form>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

