@model VolunteeringApp.ViewModels.Authentication.CitizenRegisterViewModel
@{
    ViewData["Title"] = "Citizen Registration";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 d-flex align-items-center">
            <img src="~/images/volunteering_register_citizen.jpg" class="img-fluid mx-auto" alt="Citizen Registration Image" />
        </div>
        <div class="col-md-6">
            <h1 class="text-center display-4">Citizen Registration</h1>
            <h5 class="text-center lead">Join <i>KindLink</i> and make a difference!</h5>

            <div class="mx-auto col-9" >
                <form method="post" asp-action="RegisterCitizen" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Username</label>
                        <input asp-for="UserName" class="form-control" />
                        <div id="usernameHelpBlock" class="form-text">
                            Your username must be between 3 and 20 characters and only contain letters, numbers, and underscores.
                        </div>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <div id="passwordHelpBlock" class="form-text">
                            Your password must be at least 6 characters and contain at least one non alphanumeric character, one digit ('0'-'9') and one uppercase ('A'-'Z').
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Firstname" class="form-label">First Name</label>
                        <input asp-for="Firstname" class="form-control" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Lastname" class="form-label">Last Name</label>
                        <input asp-for="Lastname" class="form-control" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" type="text" />
                        <div id="descriptionHelpBlock" class="form-text">
                           Description can be up to 500 characters long.
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label">Profile Image</label>
                        <input asp-for="ImageFile" class="form-control" />
                        <div id="imageHelpBlock" class="form-text">
                            *Optional
                            Accepted extensions .jpeg, .png, .gif
                        </div>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2 mt-3">
                        <button type="submit" class="btn btn-dark">Register</button>
                    </div>
                </form>
                <div class="mt-2 text-center">
                    Already have an account? <a class="link-dark" asp-controller="Account" asp-action="Login">Log in</a>
                </div>
            </div>
        </div>
    </div>
</div>
