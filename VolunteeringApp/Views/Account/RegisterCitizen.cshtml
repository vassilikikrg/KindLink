@model VolunteeringApp.ViewModels.Authentication.CitizenRegisterViewModel
@{
    ViewData["Title"] = "Citizen Registration";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 d-flex align-items-center">
            <img src="~/images/volunteering_register_citizen.jpg" class="img-fluid mx-auto" alt="Citizen Registration Image" />
        </div>
        <div class="col-md-6">
            <h1 class="text-center display-4">Citizen Registration</h1>
            <h5 class="text-center lead">Join <i>KindLink</i> and make a difference!</h5>

            <div class="mx-auto col-9" >
                <form method="post" asp-action="RegisterCitizen">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Username</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Firstname" class="form-label">First Name</label>
                        <input asp-for="Firstname" class="form-control" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Lastname" class="form-label">Last Name</label>
                        <input asp-for="Lastname" class="form-control" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2 mt-3">
                        <button type="submit" class="btn btn-dark">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
