@model VolunteeringApp.ViewModels.Authentication.OrganizationRegisterViewModel

@{
    ViewData["Title"] = "Organization Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row ">
        <div class="col-md-6 d-flex align-items-center">
            <img src="~/images/volunteering_register_org.jpg" class="img-fluid mx-auto" alt="Organization Registration Image" />
        </div>
        <div class="col-md-6">
            <h1 class="text-center display-4">Organization Registration</h1>
            <h5 class="text-center lead">Join <i>KindLink</i> and make a difference!</h5>
            <div class="mx-auto col-11">
                <form method="post" asp-action="RegisterOrganization" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <div id="usernameHelpBlock" class="form-text">
                         Your username must be between 3 and 20 characters and only contain letters, numbers, and underscores.
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input type="email" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                        <div id="passwordHelpBlock" class="form-text">
                            Your password must be at least 6 characters and contain at least one non alphanumeric character, one digit ('0'-'9') and one uppercase ('A'-'Z').
                        </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="OfficialName" class="form-label"></label>
                    <input asp-for="OfficialName" class="form-control" />
                        <div id="officialnameHelpBlock" class="form-text">
                            Official name cannot exceed 100 characters
                        </div>
                    <span asp-validation-for="OfficialName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="OrganizationType" class="form-label"></label>
                    <select asp-for="OrganizationType" class="form-select" asp-items="Html.GetEnumSelectList<VolunteeringApp.Models.Enums.OrganizationType>()">
                        <option value="">Please select</option>
                    </select>
                    <span asp-validation-for="OrganizationType" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" type="tel" />
                        <div id="phoneHelpBlock" class="form-text">
                            Phone must only contain numeric characters.
                        </div>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Website" class="form-label"></label>
                    <input asp-for="Website" class="form-control" type="url"/>
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" type="text" />
                        <div id="descriptionHelpBlock" class="form-text">
                            Description can be up to 500 characters long.
                        </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label">Profile Image</label>
                        <input asp-for="ImageFile" class="form-control" />
                        <div id="imageHelpBlock" class="form-text">
                            *Optional
                            Accepted extensions .jpeg, .png, .gif
                        </div>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                <div class="d-grid gap-2 mt-3">
                    <button type="submit" class="btn btn-dark">Register</button>
                </div>
            </form>
                <div class="mt-2 text-center">
                    Already have an account? <a class="link-dark" asp-controller="Account" asp-action="Login">Log in</a>
                </div>
            </div>
        </div>
    </div>
</div>
