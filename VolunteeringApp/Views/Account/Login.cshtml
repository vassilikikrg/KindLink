@model VolunteeringApp.ViewModels.Authentication.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 class="text-center display-1">Login</h1>
            <h5 class="text-center lead"> Welcome back to <i>KindLink</i>!</h5>
            
            <form asp-action="Login" method="post">
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="d-grid gap-2 mt-3">
                    <button class="btn btn-dark" type="submit">Log In</button>
                </div>
            </form>
            <div class="mt-2">
                Don't have an account? Register as <a class="link-dark" asp-controller="Account" asp-action="RegisterOrganization">organization</a> or <a asp-controller="Account" asp-action="RegisterCitizen" class="link-dark">citizen</a>.
            </div>
        </div>
        <div class="col-md-6">
            <img src="~/images/volunteering_login.jpg" class="img-fluid"/>
        </div>
    </div>
</div>
