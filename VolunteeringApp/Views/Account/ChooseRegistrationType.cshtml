@{
    ViewData["Title"] = "Choose Registration Type";
}

<div class="container">
    <h1 class="text-center mt-5 mb-3 display-5">Welcome to KindLink!</h1>
    <p class="text-center lead">Choose how you want to register:</p>
    <div class="text-center">
        <div class="btn-group">
            <a href="@Url.Action("RegisterCitizen", "Account")" class="btn btn-primary-custom btn-lg btn-block">Register as a Citizen</a>
            <a href="@Url.Action("RegisterOrganization", "Account")" class="btn btn-secondary-custom btn-lg btn-block">Register as an Organization</a>
        </div>
    </div>
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <img src="~/images/choose_registration.jpg" class="img-fluid" alt="Registration Image">
        </div>
    </div>
</div>
