@model VolunteeringApp.Models.Chat.ChatRoom

<div class="container">
    <div class="row">
        <h1>Chat with @Model.members[1].UserName</h1>
    </div>
    <div class="row p-1">
        <div><input type="text" class="w-100" id="messageInput" /></div>
    </div>
    <div class="row p-1">
        <div class="text-end">
            <input hidden id="userId" value="@Model.members[1].Id" /> <!--save receiver id-->
            <input class="btn btn-primary" type="button" id="sendButton" value="Send Message" aria-labelledby="message" placeholder="Message" />
        </div>
    </div>
    <div class="row p-1">
            <hr />
    </div>
    <div class="row p-1">
        <div id="messagesList"></div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>