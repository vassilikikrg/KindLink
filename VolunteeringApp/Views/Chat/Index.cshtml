@model List<VolunteeringApp.Models.Chat.ChatRoom>
@{
    ViewData["Title"] = "Chat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h1>Chat</h1>
    </div>
    <div class="row">
        <div class="col-4">
            @await Html.PartialAsync("_Conversations", Model)<!-- Container for conversations -->
        </div>
        <div class="col-8">
            <div id="chatRoomContainer"></div> <!-- Container for chat room content -->
        </div>
    </div>

</div>


